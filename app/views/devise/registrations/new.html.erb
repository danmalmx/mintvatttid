<form class="w-full max-w-sm">
    <h2 class="text-center text-teal mt-2">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

    <div class="field flex flex-col mb-4">
      <%= f.label :given_name, class: "uppercase font-bold text-lg text-grey-darkest" %> <br />
      <%= f.text_field :given_name, class: "border py-2 px-3 text-grey-darkest" %>
    </div>

    <div class="field flex flex-col mb-4">
      <%= f.label :family_name, class: "uppercase font-bold text-lg text-grey-darkest" %> <br />
      <%= f.text_field :family_name, class: "border py-2 px-3 text-grey-darkest" %>
    </div>
    
    <div class="field flex flex-col mb-4">
      <%= f.label :email, class: "uppercase font-bold text-lg text-grey-darkest" %><br />
      <%= f.email_field :email, class: "border py-2 px-3 text-grey-darkest" %>
    </div>

    <div class="field flex flex-col mb-4">
      <%= f.label :password, class: "uppercase font-bold text-lg text-grey-darkest" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, class: "border py-2 px-3 text-grey-darkest" %>
    </div>

    <div class="field flex flex-col mb-4">
      <%= f.label :password_confirmation, class: "mb-2 uppercase font-bold text-lg text-grey-darkest" %><br />
      <%= f.password_field :password_confirmation, class: "border py-2 px-3 text-grey-darkest" %>
    </div>

    <div class="actions">
      <%= f.submit "Create Account", class: "block bg-teal hover:bg-teal-dark text-white uppercase text-lg mx-auto p-4 rounded-full" %>
    </div>
  </div>
    <% end %>
</form>

